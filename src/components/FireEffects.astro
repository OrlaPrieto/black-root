<style>
  .global-fire-effects {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 10; /* Above backgrounds, below content if content has z-index or position */
    overflow: hidden;
  }

  .fire-glow {
    position: absolute;
    bottom: -150px;
    left: 50%;
    transform: translateX(-50%);
    width: 120%;
    height: 400px;
    background: radial-gradient(circle at center, rgba(211, 47, 47, 0.25) 0%, transparent 70%);
    filter: blur(80px);
    animation: fire-pulse 5s ease-in-out infinite;
  }

  .embers-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ember {
    position: absolute;
    bottom: -20px;
    width: 3px;
    height: 3px;
    background: #ff5722;
    border-radius: 50%;
    filter: blur(1px);
    box-shadow: 0 0 10px #ff5722, 0 0 20px #ff3d00;
    animation: rise 6s linear infinite;
    opacity: 0;
  }

  /* Distribute embers across the screen */
  .ember:nth-child(1) { left: 5%; animation-delay: 0s; animation-duration: 5s; }
  .ember:nth-child(2) { left: 15%; animation-delay: 2s; animation-duration: 7s; }
  .ember:nth-child(3) { left: 25%; animation-delay: 1s; animation-duration: 6s; }
  .ember:nth-child(4) { left: 35%; animation-delay: 3.5s; animation-duration: 8s; }
  .ember:nth-child(5) { left: 45%; animation-delay: 0.5s; animation-duration: 5.5s; }
  .ember:nth-child(6) { left: 55%; animation-delay: 2.5s; animation-duration: 6.5s; }
  .ember:nth-child(7) { left: 65%; animation-delay: 4.5s; animation-duration: 7.5s; }
  .ember:nth-child(8) { left: 75%; animation-delay: 1.5s; animation-duration: 6s; }
  .ember:nth-child(9) { left: 85%; animation-delay: 3s; animation-duration: 5.5s; }
  .ember:nth-child(10) { left: 95%; animation-delay: 0.2s; animation-duration: 4.5s; }
  .ember:nth-child(11) { left: 20%; animation-delay: 5s; animation-duration: 9s; }
  .ember:nth-child(12) { left: 80%; animation-delay: 1.2s; animation-duration: 6.2s; }

  @keyframes rise {
    0% {
      transform: translateY(0) rotate(0deg);
      opacity: 0;
    }
    10% {
      opacity: 0.8;
    }
    100% {
      transform: translateY(-110vh) rotate(360deg);
      opacity: 0;
    }
  }

  @keyframes fire-pulse {
    0%, 100% {
      opacity: 0.4;
      transform: translateX(-50%) scale(1);
    }
    50% {
      opacity: 0.7;
      transform: translateX(-50%) scale(1.1);
    }
  }
</style>
